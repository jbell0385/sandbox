<% include ../partials/header %>

<div class="container">
    
    <div class="row d-flex flex-row justify-content-center">
        <div class="col-6">
            <h1 class="text-center mb-5">Add New Comment to <%=campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST" class="mb-4">
                <div class="form-group">
                    <label for="commentText">Comment Text:</label><br>
                    <textarea class="form-control" name="comment[text]" id="commentText" cols="50" rows="10">Comment text</textarea>
                </div>
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input id="author" class="form-control" type="text" name="comment[author]" placeholder="Author Name">
                </div>
                <button class="btn btn-default btn-block" type="submit" >Submit</button>
            </form>
        
            <a href="/campgrounds">Go back</a>    
        </div>
        
    </div>
    

</div>
<% include ../partials/footer %>