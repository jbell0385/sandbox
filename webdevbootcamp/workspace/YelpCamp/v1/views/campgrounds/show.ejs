<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class='lead'>Yelp Camp</p>
                <div class="list-group">
                    <li class='list-group-item active'>Info 1</li>
                    <li class='list-group-item'>Info 2</li>
                    <li class='list-group-item'>Info 3</li>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>" alt="">
                    <div class="card-body">
                        <div class="figure-caption text-right">
                            <h4>$9.00/night</h4>
                        </div>
                        <h1 class="card-title"><a href="#"><%= campground.name %></a></h1>
                        <p><em>Submitted By: <%= campground.author.username %></em></p>
                        <a class="btn btn-secondary" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form id="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                        <p><%= campground.description %></p>
                        
                    </div>
                </div>
                <div class="card bg-light my-4">
                    <div class="card-body">
                        <div class="text-right">
                            <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Create Comment</a>
                        </div>
                        <hr>
                        <% campground.comments.forEach((comment)=>{ %>
                            <div class="row my-3">
                                <div class="col-md-12">
                                    <p>
                                        <strong><%= comment.author.username %></strong> 
                                        <span class="float-right">10 days ago.</span>
                                    </p>
                                    <p><%= comment.text %></p>
                                </div>
                            </div>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- container closing tag -->
    </div>

    <% include ../partials/footer %>