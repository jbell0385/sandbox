<% include ./partials/header.ejs %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%=blog.title%></div>
        <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="field">
                <label for="blogTitle">Title</label>
                <input id="blogTitle" type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
            <div class="field">
                <label for="blogImage">Image URL</label>
                <input id="blogImage" type="text" name="blog[image]" value="<%=blog.image%>">
            </div>
            <div class="field">
                <label for="blogDescription">Description</label>
                <textarea name="blog[body]" id="" cols="30" rows="10" ><%=blog.body%></textarea>
            </div>
            <input class="ui button" type="submit">
        </form>
    </div>

<% include ./partials/footer.ejs %>